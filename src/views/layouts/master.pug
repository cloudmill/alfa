    include ../components/_popups.pug
    include ../partials/_menu.pug

    include ../partials/_loader.pug

    .main__section
      //- Header
      block header

      //- block content
      block content

      //- Footer
      block footer

    include ../partials/__cookies.pug

    //- block scripts
    block scripts
      script(src="assets/polyfill.js")
