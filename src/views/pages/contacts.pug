extends ../layouts/master.pug

block header
  include ../partials/_header.pug

block content
  main.contacts
    +navTitle('Контакты')
    section.container.contacts-container
      .row.row-add.between__md.end__xs(data-aos='fade-up')
        .contacts-item.col.col__xl-4.col__lg-3.col__md-3.col__xs-4
        .contacts-item.col.col__xl-8.col__lg-9.col__md-9.col__xs-8
          h1 Офис
        .contacts-item.col.col__xl-4.col__lg-3.col__md-3.col__xs-4
          p ПН – ПТ, 9 – 18
        .col.col__xl-4.col__lg-5.col__md-4.col__xs-8
          .contacts-el: a(href='tel:88123290190') 8 812 329–01–90
          .contacts-el: a(href='tel:88123290194') 8 812 329–01–94
        .contacts-item.col.col__xl-4.col__lg-4.col__md-5.col__xs-8
          .page-footer-adr г. Санкт-Петербург, наб. реки Мойки, #[span.br-style] 75-79 лит. В, пом. 7Н
          a.contacts-link(href='#', target='_blank') На карте
      .row.row-add.between__md.end__xs(data-aos='fade-up')
        .contacts-item--mini.col.col__xl-4.col__lg-3.col__md-3.col__xs-4
          p По общим вопросам
        .contacts-item--mini.col.col__xl-4.col__lg-7.col__md-8.col__xs-8
          .contacts-el: a(href='mailto:info@alfahorizont.ru') info@alfahorizont.ru
        .col.col__xl-4.col__lg-2.col__md-1.col__xs-12
        .contacts-item.col.col__xl-4.col__lg-3.col__md-3.col__xs-4
          p Коммерческий департамент
        .contacts-item.col.col__xl-4.col__lg-7.col__md-8.col__xs-8
          .contacts-el: a(href='mailto:sales@alfahorizont.ru') sales@alfahorizont.ru
        .col.col__xl-4.col__lg-2.col__md-1.col__xs-12
        .col.col__xl-4.col__lg-3.col__xs-12
          p.hideOnMobileAndTablet Мы в соцсетях
        .col.col__xl-2.col__lg-2.col__md-3.col__xs-8.last__lg
          a.link-icon(href='#', target='_blank')
            +img('icons/youtube.svg')
            span YouTube
        .col.col__xl-6.col__lg-7.col__md-9.col__xs-12
          a.link-block(href='#', target='_blank')
            .link-block__title.text__lg Следите за нашими #[br] публикациями на LinkedIn
            .link-block__img: i.icon-in
    .rellax-box(data-aos='fade-up'): .rellax: +img('contacts.jpg')
    section.container.vacancy-container
      .row.row-add.between__xs
        .col.col__xl-4.col__lg-4
        .col.col__xl-8.col__lg-8
          +form('Напишите нам', 'Ваш вопрос или пожелание', 'Мы получили ваше сообщение и ответим, как только сможем.')

block footer
  include ../partials/_footer.pug
