extends ../layouts/master.pug

block header
  include ../partials/_header.pug

block content
  main.projects
    +navTitle('Проекты')
    section.container.projects-container
      .tabsSimple
        .row
          .col.col__xl-5.col__lg-4.col__xs-12
            ul.tabs__caption.revealOut(data-aos='')
              li.active.revealIn На&nbsp;карте
              li.activeGrid.revealIn Списком
          .col.col__xl-7.col__lg-8.col__xs-12
            ul#filters.filters--js.revealOut(data-aos='')
              li(
                data-filter="service",
                data-icon="assets/images/icons/bubbleb.svg",
                data-group="assets/images/icons/markerb.svg",
                data-coordinates=['59.91701049, 30.31812429', '59.91916157, 30.3251195']
              ).revealIn Сервис, поставки
              li(
                data-filter="conference",
                data-icon="assets/images/icons/bubblel.svg",
                data-group="assets/images/icons/markerl.svg",
                data-coordinates=['59.91756978, 30.31812429', '59.92049517, 30.33250093', '59.91701049, 30.3276515']
              ).revealIn Выставки и конференции
              li(
                data-filter="projects",
                data-icon="assets/images/icons/bubble.svg",
                data-group="assets/images/icons/marker.svg",
                data-coordinates=['59.92256978, 30.31812429', '59.92349517, 30.33250093', '59.92401049, 30.3276515']
              ).revealIn Партнерские проекты
        .tabs__content.active(data-aos='fade-up')
          #googleMaps
        .tabs__content
          +projects(index.project)
          .text--center
            .showMore.more--js(data-aos='fade-up')
              | Показать еще
              span


block footer
  include ../partials/_footer.pug
