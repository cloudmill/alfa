          +mainSlider(index.slider)
        .container.relative
          .swiper-pagination(data-aos='fade-up', data-aos-delay='500')
    section.index-layout
    section.index-services
      .row.tabbed-content
        .col.col__xl-4.col__lg-6.col__md-5.col__xs-12.index-services__item
