        },
      ])
        .swiper-wrapper
          +mainSlider(index.slider)
        .container.relative
          .swiper-pagination(data-aos='fade-up', data-aos-delay='500')
    section.index-layout
    section.slide-prod
      .slide-prod__wrapper
        .slide-prod__navig-title Оборудование
        .slide-prod__navig
          .navig-pagination
            .navig-pagination-item Скважинные
              br
              |фильтры
            .navig-pagination-item Устройства
              br
              |контроля притока
            .navig-pagination-item Дополнительное
              br
              |оборудование
        .slide-prod__slider
          .swiper-container.slide-prod__slider-top
            .swiper-wrapper
              .swiper-slide.slide-prod__slide
                picture
                  source(srcset="assets/images/slide-prod.png" media="(min-width: 800px)")
                  img(src="assets/images/slide-prod.png" class='slide-prod__slide-img', alt='').slide-img
                .slide-prod__link-contein
                  .slide-prod__link-row
                    .equipmentList-item__title: h2: a(href="#")
                      +arrow()
                      |Скважинные фильтры
                    +img('01..svg', 'link-namb')
                  .link-wrap
                    .item
                      .slide-prod__link: a(href="#")
                        +arrow()
                        |АльфаДирект
                      .slide-prod__link: a(href="#")
                        +arrow()
                        |АльфаШелл
                      .slide-prod__link: a(href="#")
                        +arrow()
                        |АльфаСлот
                    .item
                      .slide-prod__link: a(href="#")
                        +arrow()
                        | АльфаКомпакт
                      .slide-prod__link: a(href="#")
                        +arrow()
                        | АльфаПолимер
                .slide-prod__reverse
                  .row-item
                    .spinnerSlow: +img('equip/trademark.svg', 'link-namb')
              .swiper-slide.slide-prod__slide
                picture
                  source(srcset="assets/images/slide-prod1.png" media="(min-width: 800px)")
                  img(src="assets/images/slide-prod1.png" class='slide-prod__slide-img', alt='').slide-img
                .slide-prod__link-contein
                  .slide-prod__link-row
                    .equipmentList-item__title: h2: a(href="#")
                      +arrow()
                      |Устройства контроля притока
                    +img('02..svg', 'link-namb')
                  .slide-prod__link: a(href="#")
                    +arrow()
                    |АльфаДирект
                  .slide-prod__link: a(href="#")
                    +arrow()
                    |АльфаШелл
                  .slide-prod__link: a(href="#")
                    +arrow()
                    |АльфаСлот
                .slide-prod__reverse
                  .row-item
                    .spinnerSlow: +img('equip/trademark.svg', 'link-namb')
              .swiper-slide.slide-prod__slide
                picture
                  source(srcset="assets/images/slide-prod2.png" media="(min-width: 800px)")
                  img(src="assets/images/slide-prod2.png" class='slide-prod__slide-img', alt='').slide-img
                .slide-prod__link-contein
                  .slide-prod__link-row
                    .equipmentList-item__title: h2: a(href="#")
                      +arrow()
                      |Дополнительное оборудование
                    +img('03..svg', 'link-namb')
                  .slide-prod__link: a(href="#")
                    +arrow()
                    |Муфта ГРП
                  .slide-prod__link: a(href="#")
                    +arrow()
                    |Пакер-Подвеска
                  .slide-prod__link: a(href="#")
                    +arrow()
                    |Гидромеханический пакер
                .slide-prod__reverse
                  .row-item
                   .spinnerSlow: +img('equip/trademark.svg', 'link-namb')
                  .row-item
                     +img('progr.svg', 'link-namb')
