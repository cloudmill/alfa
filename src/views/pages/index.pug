                    .col.col__xs-12.text--center.showOnMobile(data-aos='fade-up')
                      +img('tab11.jpg')
              #test.item(data-title="Тестирование")
                .item-content(style='background: url("assets/images/tab12.jpg") no-repeat center bottom 30px / 85% auto')
                  .row
                    .col.col__xl-6.col__xs-12
                      ul.list--bullet(data-aos='fade-up')
