                    .col.col__xs-12.text--center.showOnMobile(data-aos='fade-up')
                      +img('tab12.jpg')
              #escort.item(data-title="Сопровождение")
                .item-content(style='background: url("assets/images/tab13.jpg") no-repeat center bottom / auto 80%')
